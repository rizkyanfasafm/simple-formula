{
    "name": "rizkyanfasafm/simple-formula",
    "description": "This is just project for learning how to create simple package using PHP skeleton from Spatie",
    "keywords": [
        "rizkyanfasafm",
        "simple-formula"
    ],
    "homepage": "https://github.com/rizkyanfasafm/simple-formula",
    "license": "MIT",
    "authors": [
        {
            "name": "Rizky Anfasa Farras Mada",
            "email": "rizkyanfasafm@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Rizkyanfasafm\\SimpleFormula\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rizkyanfasafm\\SimpleFormula\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
